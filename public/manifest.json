{
  "name": "【VV3】君臣论-电商插件",
  "description": "",
  "version": "1.0.0",
  "manifest_version": 3,
  "background": { 
    "service_worker": "background.js" 
  },
  "permissions": ["storage", "activeTab", "tabs", "contextMenus", "scripting", "downloads", "cookies"],
  "host_permissions":["https://*.jd.com/*"],
  "action": {
    "default_title": "popup.html",
    "default_icon": "logo.png",
    "default_popup": "popup.html"
  },
  "icons": { "16": "logo.png", "48": "logo.png", "128": "logo.png" },
  "content_scripts": [
    {
      "matches": ["https://*.1688.com/*", "https://*.tmall.com/*", "https://*.jd.com/*",
      "https://*.taobao.com/*", "https://*.alibaba.com/*", "https://*.yangkeduo.com/*",
      "https://*.pingduoduo.com/*", "http://*.junchenlun.com/*", "https://www.google.com/"
      ],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["inject.js","content.js", "content.js.map", "inject.js.map", "jdi.js"],
    "matches": ["<all_urls>"]
  }],
  "content_security_policy": {
    "script-src": "unsafe-inline"
  }
}

